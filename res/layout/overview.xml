<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:baselineAligned="false" android:orientation="vertical"
	android:keepScreenOn="true">
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:paddingBottom="5dip" android:paddingTop="5dip">

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:id="@+id/linearLayout1"
			android:gravity="left" android:layout_gravity="fill_horizontal"
			android:layout_weight="1">
			<ImageView android:layout_width="wrap_content" android:src="@drawable/clock"
				android:layout_height="fill_parent" android:id="@+id/imageView1"
				android:paddingRight="5dip"></ImageView>
			<TextView android:text="@string/n_a" android:id="@+id/status_server"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>


		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:id="@+id/linearLayout1"
			android:gravity="center_horizontal" android:layout_gravity="fill_horizontal"
			android:layout_weight="1">
			<ImageView android:layout_width="wrap_content" android:src="@drawable/redo"
				android:layout_height="fill_parent" android:id="@+id/imageView2"
				android:paddingRight="5dip"></ImageView>
			<TextView android:text="@string/n_a" android:id="@+id/reconnect"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:id="@+id/linearLayout1"
			android:gravity="center_horizontal" android:layout_gravity="fill_horizontal"
			android:layout_weight="1">
			<ImageView android:layout_width="wrap_content" android:src="@drawable/download"
				android:layout_height="fill_parent" android:id="@+id/imageView3"
				android:paddingRight="5dip"></ImageView>
			<TextView android:text="@string/n_a" android:id="@+id/speed"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:id="@+id/linearLayout1"
			android:gravity="right" android:layout_gravity="fill_horizontal"
			android:layout_weight="1">
			<ImageView android:layout_width="wrap_content" android:src="@drawable/todo"
				android:layout_height="fill_parent" android:id="@+id/imageView4"
				android:paddingRight="5dip"></ImageView>
			<TextView android:text="0 / 0" android:id="@+id/active"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
	</LinearLayout>


	<ListView android:id="@+id/android:list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

	<TextView android:id="@+id/android:empty" android:text="@string/no_downloads"
		android:layout_width="fill_parent" android:layout_height="fill_parent" />

</LinearLayout> 
